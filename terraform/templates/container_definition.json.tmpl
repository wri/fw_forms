[{
  "name": "${container_name}",
  "image": "${image}",
  "networkMode": "awsvpc",

  "environment": [
    {
      "name": "ENV",
      "value": "${environment}"
    },
    {
      "name" : "PORT",
      "value" : "${container_port}"
    },
    {
      "name" : "NODE_ENV",
      "value" : "${node_env}"
    },
    {
      "name" : "MONGO_PORT_27017_TCP_ADDR",
      "value" : "${mongo_port_27017_tcp_addr}"
    },
    {
      "name" : "CT_URL",
      "value" : "${ct_url}"
    },
    {
      "name" : "LOCAL_URL",
      "value" : "${local_url}"
    },
    {
      "name" : "TEAMS_API_URL",
      "value" : "${teams_api_url}"
    },
    {
      "name" : "AREAS_API_URL",
      "value" : "${areas_api_url}"
    },
    {
      "name" : "API_API_URL",
      "value" : "${api_api_url}"
    },
    {
      "name" : "WRI_MAIL_RECIPIENTS",
      "value" : "${wri_mail_recipients}"
    },
    {
      "name" : "TARGET_SHEET_ID",
      "value" : "${target_sheet_id}"
    },
    {
      "name" : "S3_ACCESS_KEY_ID",
      "value" : "${s3_access_key_id}"
    },
    {
      "name" : "S3_SECRET_ACCESS_KEY",
      "value" : "${s3_secret_access_key}"
    },
    {
      "name" : "S3_BUCKET",
      "value" : "${s3_bucket}"
    }
  ],
  "secrets": [
    {
      "name": "DB_SECRET",
      "valueFrom": "${db_secret_arn}"
    },
    {
      "name": "GOOGLE_PRIVATE_KEY",
       "valueFrom": "${google_private_key}"
    },
    {
      "name": "GOOGLE_PROJECT_EMAIL",
       "valueFrom": "${google_project_email}"
    }
  ],
  "portMappings": [
    {
      "containerPort": ${container_port},
      "hostPort": ${container_port}
    }
  ],
  "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "${container_name}"
       }
  }
}]
