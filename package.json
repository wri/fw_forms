{
  "name": "gfw-forms-api",
  "version": "1.1.1",
  "description": "Global forest watch - Forms API",
  "main": "index.js",
  "scripts": {
    "lint": "eslint app --fix",
    "docs": "serve docs",
    "build": "babel app/src --extensions .js,.ts -d dist",
    "start": "yarn run build && node dist/app.js",
    "restart": "rimraf dist && yarn run start",
    "dev": "nodemon --exec yarn run restart",
    "test": "concurrently -n jest,mocha \"yarn run test:jest\" \"yarn run test:mocha\"",
    "test:jest": "NODE_ENV=test jest --watchAll",
    "test:mocha": "NODE_ENV=test nodemon --exec \"yarn run build && mocha dist/test/mocha/**/*.spec.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gfw-api/gfw-forms-api.git"
  },
  "keywords": [
    "gfw",
    "api",
    "microservice",
    "node",
    "javascript",
    "koa"
  ],
  "author": {
    "name": "Vizzuality",
    "email": "hello@vizzuality.com",
    "url": "http://vizzuality.com/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gfw-api/gfw-forms-api/issues"
  },
  "engines": {
    "node": "~12"
  },
  "homepage": "https://github.com/gfw-api/gfw-forms-api#readme",
  "dependencies": {
    "@koa/cors": "^3.3.0",
    "@sentry/node": "^6.18.2",
    "aws-sdk": "^2.18.0",
    "axios": "^0.24.0",
    "bunyan": "1.7.1",
    "cartodb": "0.4.0",
    "co": "4.6.0",
    "co-request": "1.0.0",
    "config": "1.19.0",
    "json2csv": "^3.7.3",
    "jsonapi-serializer": "2.1.1",
    "koa": "^2.13.4",
    "koa-body": "^4.2.0",
    "koa-bodyparser": "4.3.0",
    "koa-convert": "^2.0.0",
    "koa-logger": "3.2.1",
    "koa-mount": "4.0.0",
    "koa-router": "10.1.1",
    "koa-simple-healthcheck": "^0.0.1",
    "koa-validate": "^1.0.7",
    "mongoose": "^4.13.13",
    "rw-api-microservice-node": "^3.4.1",
    "sleep": "^6.1.0",
